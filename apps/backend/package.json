{
  "private": true,
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch --no-clear-screen src/index.ts | pino-pretty",
    "prod": "NODE_ENV=production bun run --watch --no-clear-screen src/index.ts | pino-pretty",
    "build": "NODE_ENV=production bun build src/index.ts --target=node --outdir=dist",
    "clean": "rm -rf dist",
    "db:init": "bun run database/index.ts init",
    "db:wipe": "bun run database/index.ts wipe",
    "db:reset": "bun run database/index.ts reset",
    "lint": "biome check src/",
    "format": "biome format src/"
  },
  "dependencies": {
    "@clerk/express": "^1.3.42",
    "@langchain/community": "^0.3.27",
    "@langchain/core": "^0.3.36",
    "@langchain/openai": "^0.3.17",
    "@sendgrid/mail": "^8.1.4",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.3.0",
    "ical-generator": "^8.1.1",
    "langchain": "^0.3.13",
    "node-cache": "^5.1.2",
    "portkey-ai": "^1.6.1",
    "postgres": "^3.4.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "pino-pretty": "^11.3.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3"
  }
}
